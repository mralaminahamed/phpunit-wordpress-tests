{
    "name": "mralaminahamed/phpunit-wordpress-tests",
    "description": "PHPUnit Tests Library from the Official WordPress Develop Repo",
    "keywords": [
        "tests-lib",
        "wordpress",
        "tests",
        "phpunit"
    ],
    "license": "MIT",
    "homepage": "https://github.com/mralaminahamed/mralaminahamed/phpunit-wordpress-tests",
    "support": {
        "source": "https://github.com/mralaminahamed/mralaminahamed/phpunit-wordpress-tests",
        "issues": "https://github.com/mralaminahamed/mralaminahamed/phpunit-wordpress-tests/issues"
    },
    "require": {
		"ext-json": "*",
		"php": ">=7.2.24",
        "yoast/phpunit-polyfills": "^2.0@dev"
	},
    "scripts": {
        "update-source": [
            "Composer\\Config::disableProcessTimeout",
            "@composer update -W",
            "@clean:source-targets",
            "@clone:wordpress-develop",
            "@copy:tests:data",
            "@copy:tests:includes",
            "@copy:tests:multisite.xml",
            "@copy:tests:wp-mail-real-test.php",
            "@copy:tests:config.php"
        ],
        "clone:wordpress-develop": "git clone git://develop.git.wordpress.org/ source --quiet",
        "clean:source-targets": "( [ -d \"source\" ] && rm -rf \"source\" || true ) && mkdir -p data includes tests",
        "copy:tests:data": "cp -r source/tests/phpunit/data/* data",
        "copy:tests:includes": "cp -r source/tests/phpunit/includes/* includes",
        "copy:tests:multisite.xml": "cp -r source/tests/phpunit/multisite.xml multisite.xml",
        "copy:tests:wp-mail-real-test.php": "cp -r source/tests/phpunit/wp-mail-real-test.php wp-mail-real-test.php",
        "copy:tests:config.php": "cp -r source/wp-tests-config-sample.php wp-config-sample.php"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "files": ["bootstrap.php"]
    },
    "minimum-stability": "dev"
}
